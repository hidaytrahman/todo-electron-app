{
  "name": "todo-electron-app",
  "description": "A simple Todo application built with Electron",
  "license": "MIT",
  "keywords": [
    "electron",
    "todo",
    "application"
  ],
  "version": "1.0.0",
  "main": "main.js",
  "author": {
    "name": "Hidayat Rahman",
    "email": "hidaytrahman@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dev": "NODE_ENV=development concurrently 'yarn vite' 'wait-on http://localhost:5173 && electron .'"
  },
  "build": {
    "appId": "com.hidaytrahman.todo",
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "files": [
      "**/*"
    ]
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.2",
    "electron": "^29.0.0",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
